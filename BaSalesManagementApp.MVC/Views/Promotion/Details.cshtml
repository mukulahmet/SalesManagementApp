@model BaSalesManagementApp.MVC.Models.PromotionVMs.PromotionDetailsVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["PromotionDetails"];
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="content-wrapper">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 mb-4">
                                    @localizer["Discount"]
                                </dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-percent"></i>
                                    @Html.DisplayFor(model => model.Discount)
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["Price"]
                                </dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-dollar-sign"></i>
                                    @Html.DisplayFor(model => model.Price)
                                </dd>
                                <dt class="col-sm-3">
                                    @localizer["TotalPrice"]
                                </dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-dollar-sign"></i>
                                    @Html.DisplayFor(model => model.TotalPrice)
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["IsActive"]
                                </dt>
                                <dd class="col-sm-9 mb-4">
                                    @if (Model.IsActive)
                                    {
                                        <i class="fas fa-check text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i>
                                    }
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["StartDate"]
                                </dt>
                                <dd class="col-sm-9 mb-4">
                                    @Model.StartDate.ToString("dd/MM/yyyy")
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["EndDate"]
                                </dt>
                                <dd class="col-sm-9 mb-4">
                                    @Model.EndDate.ToString("dd/MM/yyyy")
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["CompanyName"]
                                </dt>
                                <dd class="col-sm-9 mb-4">
                                    @Html.DisplayFor(model => model.CompanyName)
                                </dd>
                                <dt class="col-sm-3 mb-4">
                                    @localizer["ProductName"]
                                </dt>
                                <dd class="col-sm-9 mb-4">
                                    @Html.DisplayFor(model => model.ProductName)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer" style="margin-top:-50px">
                            <a href="@Url.Action("Update", new { promotionId = Model.Id })" class="btn btn-primary">@localizer["Update"]</a>
                            <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
